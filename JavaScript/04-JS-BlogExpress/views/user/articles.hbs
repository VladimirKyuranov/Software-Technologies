<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>
                    <div class="row">
                        {{#if imgUrl}}
                            <div class="col-md-3">
                                <img src="{{this.imgUrl}}" width="100%">
                                <br/>
                                <br/>
                            </div>

                            <div class="col-md-9">
                                <p>
                                    {{this.teaser}}
                                </p>
                                <div>
                                    <small class="author date">
                                        {{this.date}}
                                    </small>
                                </div>
                            </div>
                        {{/if}}
                        {{#unless imgUrl}}
                            <div class="col-md-12">
                                <p>
                                    {{this.teaser}}
                                </p>
                                <div>
                                    <small class="author date">
                                        {{this.date}}
                                    </small>
                                </div>

                            </div>
                        {{/unless}}
                    </div>
                    <footer>
                        <div class="pull-right">
                            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal"
                                    data-target="#delete">Delete
                            </button>
                            <a class="btn btn-default btn-xs" href="/article/edit/{{this.id}}">Edit</a>
                            <a class="btn btn-primary btn-xs" href="/article/details/{{this.id}}">Read more
                                &raquo;</a>
                        </div>
                    </footer>
                </article>
                <!-- Modals -->
                <div class="modal fade in" id="delete" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Delete Article</h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Cancel">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    Are you sure, you want to delete article <strong>{{this.title}}</strong>?
                                </p>
                            </div>
                            <div class="modal-footer">
                                <form class="form-horizontal" method="POST"
                                      action="/article/delete/{{this.id}}">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>